{
  "name": "Go DevContainer ARM64",
  "build": {
    "dockerfile": "Dockerfile",
    "options": [
      "--platform=linux/arm64"
    ]
  },
  "runArgs": [
    "--platform=linux/arm64"
  ],
  "postCreateCommand": "go mod tidy > /dev/null 2>&1",
  "remoteUser": "vscode",
  "mounts": [
    "source=go-mod-cache-arm64,target=/home/vscode/go/pkg/mod,type=volume",
    "source=go-build-cache-arm64,target=/home/vscode/.cache/go-build,type=volume",
    "source=npm-cache-arm64,target=/home/vscode/.npm,type=volume"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "premparihar.gotestexplorer",
        "github.copilot",
        "github.copilot-chat",
        "davidanson.vscode-markdownlint",
        "bierner.markdown-mermaid",
        "eamodio.gitlens",
        "steoates.autoimport",
        "visualstudioexptteam.vscodeintellicode",
        "ms-azuretools.vscode-containers"
      ]
    }
  }
}
