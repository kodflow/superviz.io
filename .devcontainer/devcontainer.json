{
  "name": "Go DevContainer with Docker",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "runArgs": [
    "--privileged",
    "--network=host",
    "--cap-add=NET_ADMIN",
    "--cap-add=SYS_ADMIN"
  ],
  "postCreateCommand": "go mod tidy > /dev/null 2>&1 && sudo groupadd -f docker && sudo usermod -aG docker vscode && sudo service docker start",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "premparihar.gotestexplorer",
        "github.copilot",
        "github.copilot-chat",
        "davidanson.vscode-markdownlint",
        "bierner.markdown-mermaid",
        "eamodio.gitlens",
        "steoates.autoimport",
        "visualstudioexptteam.vscodeintellicode",
        "ms-azuretools.vscode-containers",
        "bazelbuild.vscode-bazel"
      ]
    }
  }
}
