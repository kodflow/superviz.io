go_test(
    name = "arch_test",
    size = "small",
    srcs = ["handler_test.go"],
    embed = [":arch"],
    tags = ["unit"],
    deps = [
        "//internal/infrastructure/transports/ssh",
        "//internal/providers",
        "@com_github_stretchr_testify//assert",
        "@com_github_stretchr_testify//mock",
    ],
