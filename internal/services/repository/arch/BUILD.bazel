load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "arch",
    srcs = ["handler.go"],
    importpath = "github.com/kodflow/superviz.io/internal/services/repository/arch",
    visibility = ["//:__subpackages__"],
    deps = [
        "//internal/infrastructure/transports/ssh",
        "//internal/providers",
        "//internal/services/repository/common",
    ],
